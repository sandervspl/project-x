@import '~style/common.styl'

.px-icon
  margin-right rem(5)
  vertical-align middle

  &--purple
    color $purple_default

  &--purple-light
    color $purple_light

  &--purple-medium
    color $purple_medium

  &--white
    color $white

  &--black
    color $black

  &--grey-medium
    color $grey_medium

  &--small
    font-size rem(13) !important

  &--normal
    font-size rem(14) !important

  &--big
    font-size rem(18) !important

  &--disabled
    opacity .5

  &--no-spacing
    margin 0