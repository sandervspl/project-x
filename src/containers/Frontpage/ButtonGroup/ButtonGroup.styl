@import "~style/common.styl";

#root .button-group
  position fixed
  bottom 13%
  left 0
  right 0
  z-index 1
  margin 0 auto
  color #eee
  font-size 1em
  text-align center

  h3
    font-size 1.25rem
    font-weight $regular

  .create-account-btn
    margin-right 10px
    width 200px
    max-width 200px

  .login-btn
    flex 1
    max-width 150px

  .button-group-inner
    display flex
    align-items center
    justify-content center
    flex-direction row
    padding 0 3rem