@import "~style/common.styl"

.mini-btn
  display inline-block
  margin-left rem(5)
  padding rem(5) rem(10)
  color $black
  font-size rem(9)
  text-transform uppercase
  border-width 1px
  border-style solid
  border-color $black
  border-radius 3px
  background-color transparent
  vertical-align middle
  line-height rem(14)
  cursor pointer

  &.purple
    color $purple_default
    border-color $purple_default