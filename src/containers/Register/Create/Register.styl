@import "~style/common.styl"

.register-page
  height 100%

.register-forms-container
  width 100%
  height 100%
  overflow hidden
  white-space nowrap
  padding-left 0
  padding-right 0

.register-form
  display inline-block
  width 100%
  height 100%
  background-color $white
  vertical-align top
  transition transform .3s ease-in-out

  &.show-personal
    transform translateX(-100%)