@import "~style/common.styl"

#navbar
  position fixed
  z-index 1000

  .top-nav
    position fixed
    top 0
    left 0
    height 40px
    background-color $black !important
    box-shadow 0 2px 3px rgba(0, 0, 0, .5) !important
    border none !important
    border-radius 0 !important

    > *
      color $white !important

    .title
      margin 0 auto

      > a
        font-size 1.429rem
        color $white
        font-weight $bold !important
        font-style italic

    .sidebar-toggle
      position fixed
      top 11px
      left 10px

    .icon
      color $white
      font-size 1.429rem