@import "~style/common.styl"

#register-page
  input[type="file"]
    display none

  .custom-file-upload
    position relative
    display inline-block
    padding 1.5rem 1rem
    width 87px
    height 87px
    border 2px solid $purple_dark
    border-radius 50%
    text-align center
    overflow hidden
    cursor pointer

    &.loading
      border none

    .upload-photo-container
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background-color $white
      background-size cover
      background-repeat no-repeat
      background-position center center

  .photo-upload
    margin-bottom 1rem
    text-align center

    .upload
      color $purple_dark

      &.up-icon
        font-size 2rem

        > .icon
          margin 0

      &.up-text
        font-size 1.286rem
        font-weight $demibold