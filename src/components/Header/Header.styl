@import "~style/common.styl"

.header
  display flex
  align-items center
  justify-content center
  margin-bottom .714rem

  &.header--ta-left
    justify-content flex-start

  &.header--ta-center
    justify-content center

  &.header--ta-right
    justify-content flex-end

  &.header--with-link
    justify-content space-between

  .icon
    margin-right 0
    color $purple_medium

  .icons
    .icon
      &:first-child
        vertical-align middle
      &:last-child
        color $white

  .header-btn
    font-size 1rem
    vertical-align sub
    float right

.header-text
  display inline-block
  margin 0 0 0 .357rem
  font-size 1.3rem
  font-weight $medium
  vertical-align middle

  &.header-text--fs-small
    font-size 1.1rem !important

  &.header-text--fs-regular
    font-size 1.3rem !important

  &.header-text--fs-big
    font-size 1.7rem !important