@import "~style/common.styl"

.px-btn
  display block
  align-self center
  position relative
  padding rem(10) rem(17.5)
  width 100%
  color $black
  border-radius 3px
  background-color $white
  box-shadow none
  border none
  transition width .15s ease-in-out, border-radius .15s ease-in-out

  &:focus,
  &:active
    outline none

  &:disabled
    color $grey

  &--inverted
    &^[0]--error
      box-shadow inset 0 0 0 1px $red_error !important

  &--flex
    display flex

  &--purple
    color $white
    background-color $purple_default

    &:disabled
      color $white
      background-color $purple_light

    > .icon
      color $white

    &^[0]--inverted
      background-color $white
      box-shadow inset 0 0 0 1px $purple_default
      color $purple_default

      &:disabled
        box-shadow inset 0 0 0 1px $purple_light
        color $purple_light

      > .icon
        color $purple_medium

  &--purple-light
    color $white
    background-color $purple_default

    &:disabled
      background-color $purple_medium

    > .icon
      color $white

    &^[0]--inverted
      background-color $white
      box-shadow inset 0 0 0 1px $purple_light
      color $purple_light

      &:disabled
        box-shadow inset 0 0 0 1px $purple_medium
        color $purple_light

      > .icon
        color $purple_light

  &--white
    background-color $white
    color $black

    &^[0]--inverted
      background-color $black
      color $white

  &--facebook
    background-color $fb_blue
    color $white

  &--twitter
    background-color $tw_blue
    color $white

  &--google
    background-color $gp_red
    color $white

  &__fs--small
    font-size rem(13)

  &__fs--normal
    font-size rem(14)

  &__fs--big
    font-size rem(17)

  &__fc--black
    color $black !important

  &__fc--white
    color $white !important

  &__fc--purple
    color $purple_default !important

  &__ta--left
    text-align left

  &__ta--right
    text-align right

  &__ta--center
    text-align center

  &--loading
    width 35px
    height 35px
    border-radius 50%

  &--transparent
    background-color rgba(255, 255, 255, 0) !important

    &^[0]--white
      box-shadow inset 0 0 0 2px $white