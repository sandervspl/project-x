@import "./common.styl"
@import "./semantic_override.styl"

@font-face
  font-family 'Avenir Next'
  src url("../assets/fonts/AvenirNext-Regular.ttf") format("truetype")
  font-weight normal
  font-style normal
@font-face
  font-family 'Avenir Next'
  src url("../assets/fonts/AvenirNext-Italic.ttf") format("truetype")
  font-weight normal
  font-style italic
@font-face
  font-family 'Avenir Next'
  src url("../assets/fonts/AvenirNext-Bold.ttf") format("truetype")
  font-weight bold
  font-style normal
@font-face
  font-family 'Avenir Next'
  src url("../assets/fonts/AvenirNext-BoldItalic.ttf") format("truetype")
  font-weight bold
  font-style italic
@font-face
  font-family 'Avenir Next'
  src url("../assets/fonts/AvenirNext-DemiBold.ttf") format("truetype")
  font-weight 600
  font-style normal

*
  font-size 100%
  font-weight $regular
  box-sizing border-box !important

  &:not(i)
    font-family 'Avenir Next', Verdana, 'sans-serif' !important

html
  touch-action manipulation

body
  margin 0
  padding 0
  font-size rem(14)

a
  color $purple_default
  font-weight $medium

h4
  font-size rem(15)
  font-weight $medium

// iOS will zoom in on input fields if font size is not 16px or bigger
select, input, textarea
  font-size rem(16) !important
  padding rem(11) rem(10) !important

#root
  width 100%
  height 100%