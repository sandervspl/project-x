@import "~style/common.styl"

.background
  position fixed
  z-index 0
  width auto
  overflow hidden
  background-color $black

  &.video
    top 50%
    left 50%
    transform translateX(-50%) translateY(-50%)
    min-width 100%
    min-height 100%
    height auto

  &.img
    position fixed
    height 100%
    min-width 100%
    background-position center center
    background-repeat no-repeat
    background-color $black
    background-size cover

    +for_breakpoint(landscape)
      left 0
