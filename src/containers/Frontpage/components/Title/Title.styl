@import "~style/common.styl";

.title-container
  position fixed
  top 13%
  left 0
  right 0
  z-index 1
  margin 0 auto
  color #eee
  font-size 1em
  text-align center

  .title
    margin 0 auto
    cursor default
    font-weight $bold
    font-style italic
    font-size 3.75rem

  .subtitle
    margin auto
    font-size 1rem
    font-weight $medium

@media (min-width: 768px)
  .title-container
    .title
      font-size 7.25rem

    .subtitle
      font-size 1.9rem