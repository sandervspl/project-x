@import "~style/common.styl"

#navbar
  position fixed
  top 0
  left 0
  width 100%
  height 50px
  z-index 10

  .top-nav
    position absolute
    top 0
    left 0
    background-color $white !important
    box-shadow 0 1px 3px rgba(0, 0, 0, .25) !important
    border none !important
    border-radius 0 !important

    > *
      color $black_light

    .title
      margin 0 auto

      &::before
        background none

      > a
        font-size 1.429rem
        color $black_light
        font-weight $bold !important
        font-style italic

    .sidebar-toggle
      position fixed
      top 18px
      left 15px
      color $black_light
      font-size 1.429rem