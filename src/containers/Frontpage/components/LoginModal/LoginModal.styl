.login-modal
  top 0
  bottom 0
  left 0 !important
  margin 0 !important
  width 100% !important
  height 433px
  border-radius 0 !important
  animation-name modal-appear
  animation-duration .4s
  animation-timing-function cubic-bezier(.825, 0, .5, 1)
  animation-iteration-count 1
  animation-direction normal

  .content .description
    .input, .button
      margin auto
      width 100%

    .input
      margin-bottom 5px

    .signin-btn
      margin-top 5px

@keyframes modal-appear
  from
    margin-top 100%
    opacity .1
  to
    margin-top 0
    opacity 1