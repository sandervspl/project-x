@import "~style/common.styl"

.photo-upload
  margin-bottom rem(14)
  text-align center

  input[type="file"]
    display none

  .upload
    color $purple_dark

    &.up-icon
      font-size rem(28)

      > .icon
        margin 0

    &.up-text
      font-size rem(18)
      font-weight $demibold

  .custom-file-upload
    position relative
    display inline-block
    margin 0 auto rem(14) !important
    padding rem(21) rem(14)
    width 87px
    height 87px
    border 2px solid $purple_dark
    border-radius 50%
    text-align center
    overflow hidden
    cursor pointer

    &.loading
      border none

    .upload-photo-container
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background-color $white
      background-size cover
      background-repeat no-repeat
      background-position center center